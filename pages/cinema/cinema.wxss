.box {
  width: 100%;
  min-height: 100%;
  position: absolute;
}

/* 头部 */

.head {
  width: 100%;
  height: 160rpx;
   border-bottom: 1px solid #bbb;
}

.head-top {
  width: 96%;
  height: 150rpx;
  /* background-color: red; */
  margin-left: 2%;
  margin-top: 0;
 
}

.top-left {
  width: 80%;
  height: 100%;
  border-right: 1px solid #bbb;
  float: left;
}

.top-name {
  width: 100%;
  height: 75rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  /* color:#8b918f; */
}

.top-address {
  width: 100%;
  height: 75rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  color: #8b918f;
}

.top-right {
  width: 19%;
