  text-align: center;
}

.address-img {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.top-map {
  width: 100%;
  font-size: 25rpx;
  color: #8b918f;
}

/* 头部结束 */

.uploadWrap {
  height: 200rpx;
  width: 100%;
  display: flex;
  display: -webkit-box;
  flex-direction: column;
}

.upload_Item {
  width: 160rpx;
  height: 260rpx;
  flex: 1;
  margin-left: 15rpx;
}

.upload_Item_img {
  width: 160rpx;
  height: 200rpx;
  background-color: #ccc;
}

.upload_Item_name {
  height: 60rpx;
  width: 160rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.intro-movie {
  height: 270rpx;
  border-bottom: 1px solid #bbb;
  margin-top:10rpx;
}

