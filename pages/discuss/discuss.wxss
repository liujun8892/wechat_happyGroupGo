/* pages/disscuss/disscuss.wxss */
.box{
  width:100%;
  min-height: 100%;
  position: fixed;
}
.form{
  width:96%;
  margin-left:2%;
  
  margin-top:20rpx;
  min-height:100%;
  position: absolute;
}
.form-text{
  border:1px solid #bbb; 
  width:100%;
  height:300rpx;
  margin-top:20rpx;
  border-radius:6rpx;
}
.form-button{
  width: 96%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: #00bfa4;
  color: #fff;
  position: fixed;
  bottom: 8%;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 10rpx;
}
.error{
  border:1px solid red; 
}
/* 星星 */
.star{
  width:100%;
  height:100rpx;
  margin-top:20rpx;
  /* background-color:#ccc; */
}
.star-item{
  width:17%;
  height:100%;
  text-align:center;
  line-height: 100rpx;
  float:left;
}
.star-img{
  width:80rpx;
  height:80rpx;
}
