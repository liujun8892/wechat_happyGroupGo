/*整体盒子样式*/

.box {
  width: 100%;
  min-height: 100%;
  position: absolute;
  /*overflow: hidden;*/
  background-color: #f2f2f2;
}

.top {
  width: 100%;
  height: 300rpx;
}

.top-right {
  margin-left: 3%;
  float: left;
  height:180rpx;
}

.top-title {
  width: 100%;
  font-size: 35rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
}

.top-intro {
  width: 100%;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #8b918f;
}

.top-price {
  width: 100%;
  font-size: 35rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #00bfa4;
}
.top-top{
  width:100%;
  height:180rpx;
}
.dissButton{
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #00bfa4;
  color: #fff;
  margin-left:3%;
  margin-top:20rpx;
  border-radius: 10rpx;
}
.payButton {
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fc9200;
  color: #fff;
  margin-left:3%;
  margin-top:20rpx;
  border-radius: 10rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/*图片样式*/

.logo {
  width: 30%;
  height: 180rpx;
  float: left;
}

/*位置消费*/

.main_content {
  width: 100%;
  background-color: #fff;
  padding-top: 20px;
}

.main_center {
  width: 96%;
  margin-left: 2%;
}

.con_top {
  border-bottom: 1px solid #eaeaea;
  height: 80px;
  width: 60%;
  float: left;
}

.shop_name {
  width: 100%;
  font-size: 35rpx;
  font-weight: bold;
  /*text-align: center;*/
  height: 60rpx;
  line-height: 60rpx;
}

.shop_grade {
  width: 100%;
  text-align: center;
}

.num {
  display: inline-block;
  font-size: 24rpx;
  color: #e1a252;
  vertical-align: middle;
  margin-left: 5rpx;
}

.rank_box {
  display: inline-block;
}

.grade_rank {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.shop_price {
  display: inline-block;
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #8b918f;
}

/*地址*/

.address {
  width: 100%;
  border-bottom: 1px solid #eaeaea;
  height: 80rpx;
  line-height: 80rpx;
  text-align:center;
}

.address_img {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.address_txt {
  font-size: 28rpx;
  margin-left: 9rpx;
  /*color:#bbb;*/
}

.sell_txt {
  font-size: 28rpx;
  margin-left: 9rpx;
  color: #575757;
}

.sj_price {
  color: #00bfa4;
  /*font-weight: bold;*/
  font-size: 55rpx;
}

.ss_price {
  margin-left: 10rpx;
  color: #8d8d8d;
  font-size: 24rpx;
}

.buy_btn {
  /*display: inline-block;*/
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1px solid #fc9200;
  background-color: #fc9200;
  color: #fff;
  float: right;
}

.lists {
  width: 100%;
  background-color: #fff;
  margin-top: 10rpx;
}

.lists_title {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #ddd;
}

.li_con {
  font-size: 33rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  font-weight: bold;
}

.list_center {
  width: 90%;
  margin-left: 5%;
  margin-top: 10px;
}

.item_name {
  width: 50%;
  height: 60rpx;
}

.item_info {
  width: 50%;
  height: 60rpx;
}

.info_item {
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  flex-direction: row;
  -webkit-flex-direction: row;
  text-align: center;
  font-size: 30rpx;
  color: #575757;
}
